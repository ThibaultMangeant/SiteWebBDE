{% extends '_template/base.html.twig' %}

{% block css %}
<link rel="stylesheet" href="assets/css/produit.css">
{% endblock %}

{% block body %}
<div class="product-form-container">
	<h2 class="form-title">Page Création Produit ADMIN</h2>
	<form method="POST" action="/produit/create" enctype="multipart/form-data" class="product-form">
		<!-- Image du produit -->
		<div class="form-group image-preview">
			<label for="imgProd" class="image-label">
				<img src="assets/images/placeholder.png" alt="Aperçu de l'image" id="imagePreview">
			</label>
			<input type="file" id="imgProd" name="imgProd" accept="image/*" onchange="previewImage(event)" hidden>
		</div>

		<!-- Intitulé du produit -->
		<div class="form-group">
			<label for="nomProd">Intitulé du produit :</label>
			<input type="text" id="nomProd" name="nomProd" value="{{ data.nomProd|default('') }}" required>
		</div>

		<!-- Identifiant du produit -->
		<div class="form-group">
			<label for="idProd">Identifiant du produit :</label>
			<input type="text" id="idProd" name="idProd" value="{{ data.idProd|default('') }}" readonly>
		</div>

		<!-- Stock initial -->
		<div class="form-group">
			<label for="qs">Stock Initial :</label>
			<input type="number" id="qs" name="qs" value="{{ data.qs|default('') }}" required>
		</div>

		<!-- Prix du produit -->
		<div class="form-group">
			<label for="prixProd">Prix du produit :</label>
			<input type="number" step="0.01" id="prixProd" name="prixProd" value="{{ data.prixProd|default('') }}" required>
		</div>

		<!-- Bouton de création -->
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Créer Produit</button>
		</div>

		<!-- Affichage des erreurs -->
		{% if errors is not empty %}
			<div class="error-messages">
				<ul>
					{% for error in errors %}
						<li>{{ error }}</li>
					{% endfor %}
				</ul>
			</div>
		{% endif %}
	</form>
</div>
<script>
	
</script>
{% endblock %}

{% block javascript %}
<script src="assets/js/produit.js"></script>
{% endblock %}
