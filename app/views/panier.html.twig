{% extends '_template/base.html.twig' %}

{% block css %}
<link rel="stylesheet" href="assets/css/panier.css">
{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 65vh;">
    <div class="card p-4 shadow-sm" style="width: 100%; max-width: 600px; background-color: #f8f9fa; border-radius: 10px;">
        <h2 class="text-center mb-4">Panier</h2>
        <div class="cart-items">
            {% for item in panier %}
            <div class="cart-item d-flex align-items-center justify-content-between mb-3">
                <div class="cart-item-info d-flex align-items-center">
                    <img src="assets/images/boutique/{{ item.image }}" alt="Article" class="cart-item-image">
                    <span class="cart-item-name">{{ item.nom }}</span>
                </div>
                <div class="cart-item-quantity d-flex align-items-center">
                    <button class="btn btn-outline-secondary btn-sm quantity-btn" data-action="decrease" data-id="{{ item.id }}">-</button>
                    <span class="quantity">{{ item.quantite }}</span>
                    <button class="btn btn-outline-secondary btn-sm quantity-btn" data-action="increase" data-id="{{ item.id }}">+</button>
                </div>
                <div class="cart-item-price">
                    {{ item.prix | number_format(2, ',', ' ') }} €
                </div>
                <button class="btn btn-danger btn-sm delete-btn" data-id="{{ item.id }}">
                    <i class="fa fa-trash"></i>
                </button>
            </div>
            {% endfor %}
        </div>
        <div class="cart-summary mt-4">
            <div class="d-flex justify-content-between">
                <span>Total :</span>
                <span class="cart-total">{{ total | number_format(2, ',', ' ') }} €</span>
            </div>
            <button class="btn btn-primary w-100 mt-3">Commander</button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
<script src="assets/js/panier.js"></script>
{% endblock %}
